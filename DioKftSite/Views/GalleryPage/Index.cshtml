@model System.Collections.Generic.IEnumerable<DioKftSite.Models.Photo>

@{
    ViewBag.Title = "Index";
}

<style type="text/css">
    #galleryPage .headerImage {
        width: 100%;
        height: 20%;
    }

    #galleryPage .form-control {
        background-color: #125027;
        color: white;
        margin: 25px auto 25px auto;
        border-radius: 0;
    }
    #galleryPage .img-responsive {
        width: 300px;
        height: 200px;
    }

    #galleryPage .row {
        padding-bottom: 25px;
    }
</style>
<div id="galleryPage">
    <div class="header-image">
        <img class="col-md-12" src="~/Content/Images/product-header.png" />
        <span>@Resources.Resources.Gallery</span>
    </div>

    @{var photos = Model.ToList(); }

    <div class="row">

        @for (var i = 0; i < photos.Count(); i++)
        {
            if (i != 0 && i % 4 == 0)
            {
                @:<div class="row">
            }

            <div class="col-xs-6 col-md-3">
                <a href="#" class="thumbnail">
                    <img src="@Url.Content(photos[i].ImageUrl)" class="img-responsive" alt="@photos[i].Title" />
                </a>
            </div>

            if ((i + 1) % 4 == 0)
            {
                @:</div>
            }
        }

        @if (photos.Count % 4 != 0)
        {
            @:</div>
        }
    
</div>
