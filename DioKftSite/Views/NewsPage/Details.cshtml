@model DioKftSite.Models.News

@{
    ViewBag.Title = "Details";
}

<style>
    a.thumbnail {
        width: 50%;
        height: 50%;
    }

    iframe.youtube-video {
        width: 30%;
        height: 50%;
    }

    button {
        position: absolute;
        bottom: 20px;
        right: 20px;
        min-height: 20px;
        background-color: #125027;
        color: white;
        border-radius: 0;
        line-height: 1.4em;
        -webkit-transition: background 0.2s linear;
        -moz-transition: background 0.2s linear;
        -ms-transition: background 0.2s linear;
        -o-transition: background 0.2s linear;
        transition: background 0.2s linear;
        overflow: hidden;
        padding-top: 0px !important;
        padding-bottom: 0px !important;
    }

    #newsListContainer button:hover {
        background-color: Highlight;
    }

    #newsListContainer .date {
        padding: 20px 0px 20px 0px;
        color: #464646;
    }
</style>

<div class="container" id="newsListContainer">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <img src="@Url.Content(Model.ImageUrl)" class="img-responsive">
                <div class="serviceContent">
                    <div class="title"><h4>@Model.Header</h4></div>
                    <div class="text">@Model.Body</div>
                    <button type="button" class="btn" onclick="location.href='@Url.Action("Index", "NewsPage")'">@Resources.Resources.Back</button>
                    <div class="date">@Model.Created.ToString("yyyy.MM.dd.")</div>
                </div>
            </div>
        </div>
    </div>
</div>
