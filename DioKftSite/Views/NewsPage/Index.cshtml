@model IEnumerable<DioKftSite.Models.News>

<style>
    a.thumbnail {
        width: 20%;
        height: 20%;
    }

    iframe.youtube-video {
       
        width: 30%;
        height: 50%;
    }
</style>

<div class="container">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="span12">
                <div class="row">
                    <div class="span8">
                        <h4><strong><a href="#">@Html.DisplayFor(modelItem => item.Header)</a></strong></h4>
                    </div>
                </div>
                <div class="row">
                    <div class="span2">
                        
                            <a href="#" class="thumbnail">
                                <img src="@Url.Content(item.ImageUrl)" class="img-responsive" />
                            </a>
                    </div>
                    <div class="span10">
                        <p>
                            @Html.DisplayFor(modelItem => item.Body)
                        </p>
                        <p>@Html.ActionLink("Details", "Details", new { id = item.Id })</p>
                    </div>
                </div>
                <div class="row">
                    <div class="span8">
                        <p></p>
                        <p>
                            
                            Created <i class="icon-calendar"></i> @Html.DisplayFor(modelItem => item.Created)
                            @*| <i class="icon-tags"></i> Category : <a href="#"><span class="label label-info">@Html.DisplayFor(modelItem => item.NewsCategory.Name)</span></a>*@
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }        
</div>
<hr>
